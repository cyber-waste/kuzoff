<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    
    <!-- to make possible injection Spring beans into JSP beans -->
    <application>
        <variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>
    </application>
    
    <managed-bean>
        <managed-bean-name>allTables</managed-bean-name>
        <managed-bean-class>cyberwaste.kuzoff.web.jsf.AllTables</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        
        <managed-property>
            <property-name>databaseManager</property-name>
            <value>#{databaseManager}</value>
        </managed-property>
    </managed-bean>
    
</faces-config>