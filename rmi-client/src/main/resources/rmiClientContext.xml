<?xml version="1.0" encoding="UTF-8"?>
<beans 
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
        
    <bean
        name="databaseManager"
        class="org.springframework.remoting.rmi.RmiProxyFactoryBean"
        p:serviceUrl="rmi://localhost/DatabaseManager"
        p:serviceInterface="cyberwaste.kuzoff.core.DatabaseManager" />
        
    <bean name="rmiClient" class="cyberwaste.kuzoff.rmi.client.RmiClientManager">
        <property name="databaseManager" ref="databaseManager" />
    </bean>
    
</beans>